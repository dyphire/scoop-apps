{
    "version": "14.04",
    "description": "Autoruns. Autostart program viewer",
    "homepage": "https://docs.microsoft.com/en-us/sysinternals/downloads/autoruns",
    "license": {
        "identifier": "Freeware",
        "url": "https://docs.microsoft.com/en-us/sysinternals/license-terms"
    },
    "url": "https://download.sysinternals.com/files/Autoruns.zip",
    "hash": "7e2e3091ef4b0579bc19c876ccb79d8b5acf6784734352159aecfbebc71c79e7",
    "pre_install": [
        "$sysint = 'HKCU:\\SOFTWARE\\Sysinternals'",
        "$fin = \"$sysint\\AutoRuns\"",
        "New-Item $sysint, $fin -ErrorAction 'SilentlyContinue' | Out-Null",
        "Set-ItemProperty -Path $fin -Name 'EulaAccepted' -Value 1 -Type 'DWord' -Force | Out-Null"
    ],
    "uninstaller": {
        "script": [
            "if ($purge) {",
            "    $sysInt = 'HKCU:\\SOFTWARE\\Sysinternals'",
            "    Remove-Item \"$sysInt\\AutoRuns\" -ErrorAction 'SilentlyContinue' -Force -Recurse",
            "    if ((Get-ChildItem $sysInt).Count -eq 0) { Remove-Item $sysInt -ErrorAction 'SilentlyContinue' -Force -Recurse }",
            "}"
        ]
    },
    "architecture": {
        "64bit": {
            "shortcuts": [
                [
                    "Autoruns64.exe",
                    "SysInternals\\Autoruns"
                ]
            ]
        },
        "32bit": {
            "shortcuts": [
                [
                    "Autoruns.exe",
                    "SysInternals\\Autoruns"
                ]
            ]
        },
        "arm64": {
            "shortcuts": [
                [
                    "Autoruns64a.exe",
                    "SysInternals\\Autoruns"
                ]
            ]
        }
    },
    "checkver": "Autoruns for Windows\\s+v([\\d.]+)</h1",
    "autoupdate": {
        "url": "https://download.sysinternals.com/files/Autoruns.zip"
    }
}
